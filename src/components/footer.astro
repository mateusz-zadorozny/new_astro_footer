---
const campaign_name = "Discover what's new in Futurehome";
const current_image = "/campaign_image.jpg";
const campaign_link = "http://currentcampaign.futurehome.no/";
const facebook_link = "https://facebook.com/futurehome.no/";
const linkedin_link = "https://www.linkedin.com/company/future-home/";
const youtube_link = "https://www.youtube.com/@FuturehomeNo";
const instagram_link = "https://www.instagram.com/futurehome.no/";
const privacy_link = "https://www.futurehome.io/no/personvernerklaering";
const terms_link = "https://www.futurehome.io/no/tos-norwegian";
---

<div id="copy" style="background-color:#fff;border-radius:12px">
    <style is:inline>
        a {
            color: #000;
            text-decoration: none;
        }

        a:hover {
            color: #000;
            text-decoration: underline;
        }

        @media only screen and (max-width: 600px) {
            .text-links {
                display: block;
                padding: 0;
            }

            .text-links li {
                display: block;
                margin-bottom: 5px;
            }
        }

        @media only screen and (min-width: 601px) {
            .text-links {
                display: inline;
            }

            .text-links li {
                display: inline;
                margin-right: 42px;
            }
        }
    </style>
    <table
        max-width="564px"
        cellpadding="0"
        cellspacing="0"
        border="0"
        style="font-family: 'Work Sans', Arial, sans-serif; font-weight: 400; color: #000;padding:20px;background-color:#fff;border-radius:12px;"
    >
        <tr>
            <td align="left">
                <img src="/Futurehome_logo.png" alt="Logo" width="100" />
            </td>
        </tr>
        <tr>
            <td height="27"></td>
        </tr>
        <tr>
            <td align="left">
                <a href={campaign_link}>
                    <img
                        src={current_image}
                        alt={campaign_name}
                        style="border-radius: 10px;"
                        width="100%"
                    />
                </a>
            </td>
        </tr>
        <tr>
            <td height="16"></td>
        </tr>
        <tr>
            <td align="left" style="font-size: 12px;">
                <ul
                    class="text-links"
                    style="list-style: none; padding: 0; margin: 0;"
                >
                    <li>
                        <a href="https://www.futurehome.io">futurehome.io</a>
                    </li>
                    <li>
                        <a href="https://www.stromkontroll.no"
                            >stromkontroll.no</a
                        >
                    </li>
                    <li>
                        <a href="https://support.futurehome.no/hc/en-no"
                            >Support</a
                        >
                    </li>
                    <li><a href="https://forum.futurehome.io/">Forum</a></li>
                </ul>
            </td>
        </tr>
        <tr>
            <td height="22"></td>
        </tr>
        <tr>
            <td align="right">
                <a href={facebook_link}
                    ><img
                        src="/facebook.png"
                        alt="Facebook"
                        width="21"
                        style="margin-right: 6%;"
                    /></a
                >
                <a href={linkedin_link}>
                    <img
                        src="/linkedin.png"
                        alt="LinkedIn"
                        width="21"
                        style="margin-right: 6%;"
                    /></a
                >
                <a href={instagram_link}
                    ><img
                        src="/instagram.png"
                        alt="Instagram"
                        width="21"
                        style="margin-right: 6%;"
                    /></a
                >
                <a href={youtube_link}
                    ><img src="/youtube.png" alt="Youtube" width="21" /></a
                >
            </td>
        </tr>
        <tr>
            <td height="13px"></td>
        </tr>
        <tr>
            <td style="border-top: 2px solid black;"></td>
        </tr>
        <tr>
            <td height="13px"></td>
        </tr>
        <tr>
            <td align="left" style="font-size: 8px;">
                <span>Â© Copyright 2023 Futurehome AS</span>
                <span style="float: right;"
                    ><a href={terms_link}>Terms &amp; Conditions</a></span
                >
                <span style="float: right;margin-left: 6px;margin-right: 6px;"
                    >|</span
                >
                <span style="float: right;"
                    ><a href={privacy_link}>Privacy Policy</a></span
                >
            </td>
        </tr>
    </table>
</div>
